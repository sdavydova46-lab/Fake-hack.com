<script>
const screen=document.getElementById('screen');
const cmdInput=document.getElementById('cmdInput');
const companyInput=document.getElementById('companyInput');
const personInput=document.getElementById('personInput');
function println(t){screen.textContent+=t+'\n';screen.scrollTop=1e9;}

/* ---------- matrix rain ---------- */
const can=document.getElementById('matrix'),ctx=can.getContext('2d');
function resize(){can.width=innerWidth;can.height=innerHeight;}
resize();addEventListener('resize',resize);
const cols=Math.floor(can.width/12),drops=[...Array(cols)].map(()=>1);
function draw(){
  ctx.fillStyle='rgba(0,0,0,.05)';
  ctx.fillRect(0,0,can.width,can.height);
  ctx.fillStyle='#0f0';
  ctx.font='12px monospace';
  for(let i=0;i<drops.length;i++){
    const text=String.fromCharCode(33+Math.random()*94);
    ctx.fillText(text,i*12,drops[i]*12);
    if(drops[i]*12>can.height&&Math.random()>.975) drops[i]=0;
    drops[i]++;
  }
  requestAnimationFrame(draw);
}
draw();

/* ---------- utils ---------- */
function rnd(min,max){return Math.floor(Math.random()*(max-min+1))+min;}
function fakeCard(){
  const bin=['4','5','6'][rnd(0,2)];
  let num=bin;
  for(let i=0;i<15;i++) num+=rnd(0,9);
  return num;
}
function fakeName(){
  const f=['Alex','Jordan','Taylor','Morgan','Casey'];
  const l=['Smith','Johnson','Williams','Brown','Jones'];
  return f[rnd(0,f.length-1)]+' '+l[rnd(0,l.length-1)];
}
function fakeAddr(){
  const streets=['Main St','Oak Ave','Pine Rd'];
  const cities=['Springfield','Riverside','Greenville'];
  const states=['CA','TX','FL'];
  return `${rnd(100,9999)} ${streets[rnd(0,streets.length-1)]}, ${cities[rnd(0,cities.length-1)]}, ${states[rnd(0,states.length-1)]} ${rnd(10000,99999)}`;
}
function fakeCompany(){
  const names=['GloboCorp','MegaSys','Initech','CyberDyne'];
  return names[rnd(0,names.length-1)];
}

/* ---------- typed actions ---------- */
function shutDownTyped(){
  const name=companyInput.value.trim();
  if(!name){println('âŒ Enter a company name.');return;}
  println(`[${new Date().toLocaleTimeString()}] â–¶Targeting "${name}"...`);
  println(`   ðŸ’¥ Firewall bypassed (GIF injected)`);
  println(`   âœ… "${name}" database "deleted" (rows set to NULL)`);
  println('');
  companyInput.value='';
}
function grabPersonCard(){
  const name=personInput.value.trim();
  if(!name){println('âŒ Enter a personâ€™s name.');return;}
  println(`[${new Date().toLocaleTimeString()}] â–¶Profiling "${name}"...`);
  println(`   ðŸ’³ Card: ${fakeCard()}  CVV: ${rnd(100,999)}  Exp: 0${rnd(1,9)}/2${rnd(5,9)}`);
  println(`   ðŸ‘¤ ${name}`);
  println(`   ðŸ“ ${fakeAddr()}`);
  println('');
  personInput.value='';
}

/* ---------- classic buttons ---------- */
function hackCompany(){
  println(`[${new Date().toLocaleTimeString()}] â–¶Targeting ${fakeCompany()}...`);
  println(`   ðŸ’¥ Firewall bypassed (GIF injected)`);
  println(`   âœ… Database "deleted" (rows set to NULL)`);
  println('');
}
function grabCard(){
  println(`[${new Date().toLocaleTimeString()}] â–¶Sniffing packet...`);
  println(`   ðŸ’³ Card: ${fakeCard()}  CVV: ${rnd(100,999)}  Exp: 0${rnd(1,9)}/2${rnd(5,9)}`);
  println(`   ðŸ‘¤ ${fakeName()}`);
  println('');
}
function grabAddress(){
  println(`[${new Date().toLocaleTimeString()}] â–¶Geo-locating target...`);
  println(`   ðŸ“ ${fakeAddr()}`);
  println('');
}
function clearLog(){
  screen.textContent='';
}

/* ---------- bonus terminal commands ---------- */
cmdInput.addEventListener('keydown',e=>{
  if(e.key==='Enter'){
    const c=cmdInput.value.trim();
    if(c==='clear')clearLog();
    else if(c==='help')println('Commands: clear | help | or use the buttons');
    else if(c)println('bash: '+c+': command not found (try buttons)');
    cmdInput.value='';
  }
});
</script>
